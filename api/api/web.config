<configuration>
    <system.web>
        <!-- This will handle requests up to 1024MB (1GB) -->
        <httpRuntime maxRequestLength="1048576" timeout="3600" />
    </system.web>

    <system.webServer>
        <security>
            <requestFiltering>
                <!-- This will handle requests up to 1024MB (1GB) -->
                <requestLimits maxAllowedContentLength="1048576000" />
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>

<!-- IIS Specific Targeting (noted by the system.webServer section) -->
